<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".transactions.AddTransactionActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fieldItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item name: "
                android:ems="7" />
            <EditText
                android:id="@+id/addItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Enter the item name here"
                android:ems="10"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fieldItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:ems="7" />
            <EditText
                android:id="@+id/addItemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Enter the price here"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fieldPaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment method: "
                android:ems="7" />
            <EditText
                android:id="@+id/addPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Enter the payment method here"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fieldItemCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item category: "
                android:ems="7" />
            <EditText
                android:id="@+id/addItemCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Enter the item category here"/>
        </TableRow>

        <!--    <TableRow-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="match_parent">-->
        <!--        <TextView-->
        <!--            android:id="@+id/fieldPurchaseLocation"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content" -->
        <!--            android:text="Purchase location: " -->
        <!--            android:ems="7" />-->
        <!--        <EditText-->
        <!--            android:id="@+id/addPurchaseLocation"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:autofillHints="Enter the purchase location here"/>-->
        <!--    </TableRow>-->

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fieldPurchaseNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes: "
                android:ems="7" />
            <EditText
                android:id="@+id/addPurchaseNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Enter purchase notes here"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/fieldPurchaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:ems="7" />
            <EditText
                android:id="@+id/addPurchaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Enter the date here"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/cancel_new_transaction"
                android:text="Cancel"
                />
    <!--            android:onClick="onSaveNewTransaction"-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/save_new_transaction"
                android:text="Save"
                />
    <!--            android:onClick="onCancelNewTransaction"-->
        </TableRow>
    </TableLayout>
</LinearLayout>